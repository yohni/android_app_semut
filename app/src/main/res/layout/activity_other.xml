<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.other">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <android.support.design.widget.AppBarLayout
            android:id="@+id/appBarLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="@color/colorPrimaryDark">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="30dp"
                android:background="@color/colorPrimaryDark"
                app:layout_scrollFlags="scroll|enterAlways"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="8dp"
                    android:text="@string/app_other"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <android.support.design.widget.TextInputLayout
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="22dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Enamel Fluorosis"

                        />

                    <Spinner
                        android:id="@+id/enamel_flourosis_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:layout_marginBottom="10dp">

                    </Spinner>

                    <TextView
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dental Erosion"/>

                    <Spinner
                        android:id="@+id/dental_erosion_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>

                    <TextView
                        android:layout_marginTop="10dp"
                        android:textSize="15dp"
                        android:text="Number of teeth affected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/dental_erosion_number_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:layout_marginBottom="10dp"
                        >

                    </Spinner>

                    <TextView
                        android:text="Dental Trauma"
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/dental_trauma_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>

                    <TextView
                        android:textSize="15dp"
                        android:layout_marginTop="10dp"
                        android:text="Number of Teeth Affected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/dental_trauma_number_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="20dp"
                        android:layout_marginBottom="10dp"
                        >


                    </Spinner>

                    <TextView
                        android:textSize="20dp"
                        android:text="Oral Muscosal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <LinearLayout

                        android:paddingBottom="10dp"
                        android:weightSum="2"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"
                                android:textSize="15dp"
                                android:text="Condition"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <Spinner
                                android:id="@+id/oral_mos_cond1"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                            <Spinner
                                android:id="@+id/oral_mos_cond2"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                            <Spinner
                                android:id="@+id/oral_mos_cond3"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>

                        </LinearLayout>

                        <LinearLayout
                            android:padding="20dp"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_marginBottom="10dp"
                                android:textAlignment="center"
                                android:textSize="15dp"
                                android:text="Location"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <Spinner
                                android:id="@+id/oral_mos_loc1"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                            <Spinner
                                android:id="@+id/oral_mos_loc2"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>
                            <Spinner
                                android:id="@+id/oral_mos_loc3"
                                android:layout_marginBottom="5dp"
                                android:textAlignment="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                            </Spinner>

                        </LinearLayout>



                    </LinearLayout>

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:text="Dentures"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:textSize="15dp"
                        android:text="Upper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/dentures_upper_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>

                    <TextView
                        android:textSize="15dp"
                        android:text="Lower"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/dentures_lower_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>

                    <TextView
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="20dp"
                        android:text="Intervention Urgency"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/intervention_spinner"
                        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
                        android:layout_marginBottom="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </Spinner>



                </android.support.design.widget.TextInputLayout>



                <LinearLayout
                    android:id="@+id/btn_save_dentition_status"
                    android:layout_width="391dp"
                    android:layout_height="68dp"
                    android:background="@color/backgroundButtonCreate"
                    android:clickable="true"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingLeft="-22dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_save_white_24dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="16dp"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="24dp" />

                </LinearLayout>
            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</android.support.constraint.ConstraintLayout>